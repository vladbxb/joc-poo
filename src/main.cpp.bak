#include <SFML/Graphics.hpp>
#include <iostream>

int main()
{
	unsigned int lungimeFereastra = 860;
	unsigned int latimeFereastra = 600;
	const unsigned int frameRate = 60;
    sf::RenderWindow window(sf::VideoMode(lungimeFereastra, latimeFereastra), "Joc POO >:3");
    window.setFramerateLimit(60);

	unsigned int mouseX, mouseY;

    while (window.isOpen())
    {
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();
			if (event.type == sf::Event::MouseMoved)
			{
				mouseX = event.mouseMove.x;
				mouseY = event.mouseMove.y;
				// std::cout << "new mouse x: " << event.mouseMove.x << std::endl;
				// std::cout << "new mouse y: " << event.mouseMove.y << std::endl;
			}
			if (event.type == sf::Event::Resized)
			{
				lungimeFereastra = event.size.width;
				latimeFereastra = event.size.height;
			}
        }

		sf::Color fundal(18, 152, 255);

        window.clear(fundal);

		// aici desenam obiectele
		float raza = lungimeFereastra * 0.05f;
		sf::CircleShape colac(raza);
		colac.setFillColor(sf::Color(255, 0, 0));
		colac.setOrigin(raza, raza);
		colac.setPosition(mouseX, latimeFereastra * 0.85f);

		window.draw(colac);

        window.display();
    }
}

